# Environment Configuration Template
# Copy this file to .env and modify the values as needed

# ===== SERVER CONFIGURATION =====
# Host to bind the API server to
HOST=0.0.0.0

# Port for the API server
PORT=3000

# Logging level (debug, info, warning, error)
LOG_LEVEL=info

# ===== MODEL CONFIGURATION =====
# Path to the trained model directory
MODEL_PATH=./models/prompt_injection_model

# Maximum text length for tokenization and processing
MAX_TEXT_LENGTH=256

# ===== API CONFIGURATION =====
# Maximum number of texts allowed in batch requests
BATCH_SIZE_LIMIT=100

# Request timeout in seconds
REQUEST_TIMEOUT=30

# ===== DEVELOPMENT SETTINGS =====
# Enable auto-reload for development (true/false)
RELOAD=false

# Enable debug mode (true/false)
DEBUG=false

# ===== PRODUCTION SETTINGS =====
# (Uncomment and configure for production deployment)

# CORS allowed origins (comma-separated)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API key header name for authentication
# API_KEY_HEADER=X-API-Key

# API key for authentication
# API_KEY=your-secure-api-key-here

# Rate limiting (requests per minute)
# RATE_LIMIT=100
